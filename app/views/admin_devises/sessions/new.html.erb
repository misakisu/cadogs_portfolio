<div class="container">
<h2>ログイン画面</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= f.label :email, "メールアドレス" %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control bg-gradient-success" %>

  <%= f.label :password, "パスワード" %><br />
  <%= f.password_field :password, autocomplete: "current-password", class: "form-control bg-gradient-success" %>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "admin_devises/shared/links" %>
</div>
