<div class="container">
<h5>ペット新規登録</h5>
<%= form_with model:@pet, url:user_pets_path, method: :post, local:true do |form| %>

  <%= form.label :image, "プロフィール画像" %>
  <%= form.attachment_field :image %>

  <%= form.label :name, "ペットのお名前" %>
  <%= form.text_field :name, class: "form-control bg-gradient" %>

  <div>
  <%= form.radio_button :gender, :男の子, class:"radio_button" %>
  <%= form.label :gender, "男の子", {value: 0} %>
  <%= form.radio_button :gender, :女の子, class:"radio_button" %>
  <%= form.label :gender, "女の子", {value: 1} %>
  </div>

  <div><%= form.collection_select(:pet_genre_id, PetGenre.all, :id, :name) %></div>

  <%= form.submit "確認画面へ進む", class:"btn btn-success" %>

<% end %>

<h5>ペット一覧</h5>
<table class="table table-inverse">
   <thead class="thead-lignt">
     <tr>
       <th>写真</th>
       <th>名前</th>
       <th>性別</th>
       <th>タイプ</th>
       <th></th>
     </tr>
    </thead>
    <tbody>
      <% @pets.each do |pet| %>
        <tr>
          <td><%= attachment_image_tag pet, :image, format: 'jpg', size: "100x100", class: "pullleft profile-img", fallback: "no_image.jpg" %></td>
          <td><%= pet.name %></td>
          <td><%= pet.gender %></td>
          <td><%= pet.pet_genre.name %></td>
          <td><%= link_to '編集する', edit_pet_path(pet), method: :delete, class:"btn btn-success" %></td>
          <td><%= link_to '削除する', pet_path(pet), method: :delete, class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
</table>
</div>
