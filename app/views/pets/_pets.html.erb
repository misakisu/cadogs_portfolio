<h5>ペット一覧</h5>
<table class="table table-inverse">
   <thead class="thead-lignt">
     <tr>
       <th>写真</th>
       <th>名前</th>
       <th>性別</th>
       <th>タイプ</th>
       <th></th>
     </tr>
    </thead>
    <tbody>
      <% pets.each do |pet| %>
        <tr>
          <td><%= attachment_image_tag pet, :image, format: 'jpg', size: "100x100", class: "pullleft profile-img", fallback: "no_image.jpg" %></td>
          <td><%= pet.name %></td>
          <td><%= pet.gender %></td>
          <td><%= pet.pet_genre.name %></td>
          <td><%= link_to '編集する', edit_pet_path(pet), class:"btn btn-success" %></td>
          <td><%= link_to '削除する', pet_path(pet), method: :delete, class:"btn btn-danger", remote: true %></td>
        </tr>
      <% end %>
    </tbody>
</table>
</div>
