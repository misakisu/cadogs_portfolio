<!--いいねはUserのみが可能、Ownerと管理者は合計数の閲覧のみ-->
<!--remote: trueでJs非同期通信リクエストを送信-->
<% if user_signed_in? %>
  <% if hotel.favorited_by?(current_user) %>
    <%= link_to hotel_favorites_path(hotel), method: :delete, remote: true do %>
    <i class="fa fa-star" aria-hidden="true"></i>
    <% end %>
    <%= hotel.favorites.count %>
  <% else %>
    <%= link_to hotel_favorites_path(hotel), method: :post, remote: true do %>
    <i class="fa fa-star-o" aria-hidden="true"></i>
    <% end %>
    <%= hotel.favorites.count %>
  <% end %>
<% elsif owner_signed_in? || admin_signed_in? %>
  <%= hotel.favorites.count %>
<% end %>