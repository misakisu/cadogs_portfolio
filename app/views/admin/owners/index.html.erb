<div class="container">
  <p class="text-primary"><%= flash[:success] %></p>
  <h1>オーナ一覧</h1>
    <i>オーナー情報の変更は名前をクリック</i>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-xs-offset-2">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>オーナーID</th>
          <th>氏名</th>
          <th>電話番号</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @owners.each do |owner| %>
        <tr>
          <td><%= owner.id %></td>
          <td><%= link_to "#{owner.name}", edit_admin_owner_path(owner.id) %></td>
          <td><%= owner.phone_number %></td>
          <td><%= owner.email %></td>
          <td>
            <% if owner.is_valid? %>
              <p>有効</p>
            <% else %>
              <p>退会済</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
