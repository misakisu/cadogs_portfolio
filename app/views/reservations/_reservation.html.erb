<h4><strong>予約フォーム</strong></h4>
<div class="reservation-form">
  <i>予約は1ペット様ずつ可能となっております</i>
  <%= form_with model:[@user, @reservation], url:confirm_user_reservations_path, method: :post, local:true do |form| %>

    <h3><strong>チェックイン</strong></h3>
    <%= form.date_field  :start_date %>

    <h3><strong>チェックアウト</strong></h3>
    <%= form.date_field  :end_date %>

    <h3><strong>ご宿泊予定のペット</strong></h3>
    <%= form.collection_select(:pet_id, @pets, :id, :name) %>
　　<p><i>ご予約は1ペット様ずつとなっております</i></p>
    <p><%= link_to "ペット様のご登録から", user_pets_path, class: "btn-sm btn-primary" %></p>

    <h3><strong>その他ご要望</strong></h3>
    <%= form.text_area  :request, rows:'5', class: "form-control bg-gradient" %>

    <!--hotelのidは簡潔にuserがfindしたidをviewから送信-->
    <%= form.hidden_field :hotel_id, value: @hotel.id %>

    <%= form.submit "確認画面へ進む", class:"btn btn-success" %>

  <% end %>
</div>
