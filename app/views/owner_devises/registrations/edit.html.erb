<div class="container">
<h2>登録情報変更</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "owner_devises/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :name, "ご担当者様のお名前" %><br />
    <%= f.text_field :name, autofocus: true, autofocus: true, class: "form-control bg-gradient-success" %>
  </div>

  <div class="field">
    <%= f.label :email, "ご担当者様のメールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control bg-gradient-success" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "ご担当者様の電話番号" %><br />
    <%= f.number_field :phone_number, autofocus: true, autofocus: true, class: "form-control bg-gradient-success" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "新しいパスワード" %> <i>パスワードを変更しない場合は変更しないでください</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control bg-gradient-success"  %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "新しいパスワードを再度入力してください" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-gradient-success"  %>
  </div>

  <div class="field">
    <%= f.label :current_password, "現在のパスワード" %> <i>変更には現在のパスワードが必要です</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control bg-gradient-success"  %>
  </div>

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>

<%= link_to "退会する", confirm_owner_path %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
