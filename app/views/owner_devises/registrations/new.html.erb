<div class="container">
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "owner_devises/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :name, "ご担当者様のお名前" %><br />
    <%= f.text_field :name, autofocus: true, autofocus: true, class: "form-control bg-gradient-success" %>
  </div>

  <div class="field">
    <%= f.label :email, "ご担当者様のメールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control bg-gradient-success" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "ご担当者様の電話番号" %><br />
    <%= f.number_field :phone_number, autofocus: true, autofocus: true, class: "form-control bg-gradient-success" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワードを入力してください" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control bg-gradient-success" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "再度パスワードを入力してください" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-gradient-success" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
<h3>既に登録済みの方</h3>
<%= render "owner_devises/shared/links" %>
</div>
