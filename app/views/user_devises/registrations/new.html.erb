<div class="container">
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "user_devises/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-xs-12 col-sm-3">名前</div>
    <div class="field col-xs-12 col-sm-3">
      <%= f.label :family_name, "(姓)" %>
      <%= f.text_field :family_name, autofocus: true, class: "form-control bg-gradient-success" %>
    </div>
    <div class="field col-xs-12 col-sm-4">
      <%= f.label :given_name, "(名)" %>
      <%= f.text_field :given_name, autofocus: true, class: "form-control bg-gradient-success" %>
    </div>

    <div class="col-xs-12 col-sm-3">フリガナ</div>
    <div class="field col-xs-12 col-sm-3">
      <%= f.label :family_name_kana, "(セイ)" %>
      <%= f.text_field :family_name_kana, autofocus: true, class: "form-control bg-gradient-success" %>
    </div>
    <div class="field col-xs-12 col-sm-4">
      <%= f.label :given_name_kana, "(メイ)" %>
      <%= f.text_field :given_name_kana, autofocus: true, class: "form-control bg-gradient-success" %>
    </div>

    <div class="col-xs-12 col-sm-3"><%= f.label :email, "メールアドレス" %></div>
    <div class="field col-xs-12 col-sm-9">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control bg-gradient-success" %>
    </div>

    <div class="col-xs-12 col-sm-3"><%= f.label :phone_number, "電話番号(ハイフン無し)" %></div>
    <div class="field col-xs-12 col-sm-9">
      <%= f.number_field :phone_number, autofocus: true, class: "form-control bg-gradient-success" %>
    </div>

    <div class="col-xs-12 col-sm-3"><%= f.label :password, "パスワード" %></div>
    <!--<% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />-->
    <div class="field col-xs-12 col-sm-9">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control bg-gradient-success" %>
    </div>

    <div class="col-xs-12 col-sm-3"><%= f.label :password_confirmation, "パスワード(確認用)" %></div>
    <div class="field col-xs-12 col-sm-9">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-gradient-success" %>
    </div>
    <div class="col-xs-3"></div>
    <div class="col-xs-3"><%= f.submit "新規登録", class: "form-control bg-gradient-success" %></div>
    <div class="col-xs-3"></div>
  </div>
<% end %>

<h3>既に登録済みの方</h3>
<%= render "user_devises/shared/links" %>
</div>
